##########################
# Overall ghostty config #
##########################
theme = Catppuccin Mocha
font-family = "JetBrainsMono Nerd Font Mono"
font-size = 20

window-height=36
window-width=140

# jumping to start of line with a single cmd+left
keybind = cmd+left=text:\x01\x01
command = "/bin/zsh -l -c tmux"

# clearing the screen cmd+k
keybind = cmd+k=text:\x01K 

#################
# tmux keybinds #
#################

# tmux bindings (creating splits and tabs)
# ----------------------------------------
#  creating vertical split (cmd+d)
keybind = cmd+d=text:\x01%

# create horizontal split (cmd+shift+d)
keybind = cmd+shift+d=text:\x01"

# create a new tab (pane) (cmd+t)
keybind = cmd+t=text:\x01c

# Jumping between tmux tabs
keybind = cmd+digit_1=text:\x011
keybind = cmd+digit_2=text:\x012
keybind = cmd+digit_3=text:\x013
keybind = cmd+digit_4=text:\x014
keybind = cmd+digit_5=text:\x015
keybind = cmd+digit_6=text:\x016
keybind = cmd+digit_7=text:\x017
keybind = cmd+digit_8=text:\x018
keybind = cmd+digit_9=text:\x019
